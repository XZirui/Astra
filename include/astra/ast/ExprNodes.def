// ReSharper disable once CppMissingIncludeGuard

ABSTRACT_NODE(Expr, ASTNode)

// primaryExpr : INTEGER_LITERAL
NODE(LiteralExpr, Expr,
    ATTR(uint64_t, Value = 0)
)

// primaryExpr : IDENTIFIER
NODE(VarExpr, Expr,
    ATTR(Identifier *, Name)
)

// unaryExpr
NODE(UnaryExpr, Expr,
    ATTR(Op, Operator)
    ATTR(Expr *, Operand)
)

// from disjunction to multiplication
NODE(BinaryExpr, Expr,
    ATTR(Op, Operator)
    ATTR(Expr *, LHS)
    ATTR(Expr *, RHS)
)