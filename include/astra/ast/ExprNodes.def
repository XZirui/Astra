// ReSharper disable once CppMissingIncludeGuard

ABSTRACT_NODE(Expr, ASTNode,
    ATTR(bool, IsConstexpr = false)
)
ABSTRACT_NODE(LiteralExpr, Expr,
    ATTR(bool, IsConstexpr = true)
)

// primaryExpr : INTEGER_LITERAL
NODE(IntLiteral, LiteralExpr,
    ATTR(llvm::APSInt, Value{0})
)

// primaryExpr : BOOLEAN_LITERAL
NODE(BoolLiteral, LiteralExpr,
    ATTR(bool, Value = false)
)

// primaryExpr : NULL_LITERAL
NODE(NullLiteral, LiteralExpr, )

// primaryExpr : FLOAT_LITERAL | DOUBLE_LITERAL
NODE(FloatLiteral, LiteralExpr,
    ATTR(FloatType, FloatKind)
    ATTR(llvm::APFloat, Value{llvm::APFloat::getZero(llvm::APFloat::IEEEsingle())})
)

// primaryExpr : IDENTIFIER
NODE(VarExpr, Expr,
    ATTR(llvm::StringRef, Name)
)

// unaryExpr
NODE(UnaryExpr, Expr,
    ATTR(Op, Operator)
    ATTR(Expr *, Operand)
)

// from disjunction to multiplication
NODE(BinaryExpr, Expr,
    ATTR(Op, Operator)
    ATTR(Expr *, LHS)
    ATTR(Expr *, RHS)
)